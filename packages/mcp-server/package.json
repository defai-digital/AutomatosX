{
  "name": "@automatosx/mcp-server",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP (Model Context Protocol) server for AutomatosX",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "automatosx-mcp": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@automatosx/contracts": "workspace:*",
    "@automatosx/workflow-engine": "workspace:*",
    "@automatosx/routing-engine": "workspace:*",
    "@automatosx/memory-domain": "workspace:*",
    "@automatosx/trace-domain": "workspace:*",
    "@automatosx/guard": "workspace:*",
    "@automatosx/agent-domain": "workspace:*",
    "@automatosx/session-domain": "workspace:*",
    "@automatosx/config-domain": "workspace:*",
    "@automatosx/ability-domain": "workspace:*",
    "@automatosx/provider-adapters": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "hono": "^4.0.0",
    "zod": "^3.22.4"
  }
}
