# Package manager configuration for CI (pnpm) and local development
# pnpm-specific options below are ignored by npm (warnings are harmless)
# See CLAUDE.md "Package Manager Setup" for details

# Use hoisted node_modules structure for tool compatibility
# This ensures tools expecting npm's flat structure work correctly
node-linker=hoisted

# Prefer offline resolution when possible (faster CI)
prefer-offline=true

# Auto-install peer dependencies
auto-install-peers=true

# Don't fail on peer dependency warnings (some packages have loose peers)
strict-peer-dependencies=false

# Enable side-effects cache for native modules (better-sqlite3, sqlite-vec)
side-effects-cache=true

# Shamefully hoist all dependencies (maximum compatibility)
shamefully-hoist=true
